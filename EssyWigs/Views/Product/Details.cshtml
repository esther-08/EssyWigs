@model Product

    
        <h2>@Model.Name</h2>
        <div class="thumbnail">
            <img alt="@Model.Name" src="@Model.Image">
            <div class="caption-full">
                <h3 class="pull-right">Price = £ @Model.Price </h3>
                <h3>
                    <a href="#">@Model.Name</a>
                </h3>
                <h4>Colour: @Model.Colour </h4>
                <h4>Material: @Model.Material</h4>
                <h4>Hair Type: @Model.HairType</h4>
                <h4>Cap size: @Model.CapSize</h4>
                <p>Product description: @Model.Description</p>
                <h4>Supplier Id: @Model.SupplierId</h4>

                <div class="addToCart">
                    <p class="button">
                        <a class="btn btn-primary"
                           asp-controller="ShoppingCart"
                           asp-action="AddToShoppingCart"
                           asp-route-productId="@Model.ProductId">Add to cart</a>
                    </p>
                </div>
            </div>
        </div>
      