@model Product

<h2>@Model.ProductId</h2>
<div class="thumbnail">
    <img alt="Model.Name">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.Colour</h4>
        <h4>@Model.Material</h4>
        <h4>@Model.HairType</h4>
        <h4>@Model.CapSize</h4>
        <p>@Model.Description</p>
        <img />
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>