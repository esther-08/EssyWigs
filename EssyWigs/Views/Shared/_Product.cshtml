@model Product

<div class="col-sm-4 col-lg-md-4">
    <div class="img-thumbnail">
        <img src="~/Images/w02276-01.jpg" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.Name</a>
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
               <a class="btn btn-primary"
                  asp-controller="ShoppingCart"
                  asp-action="AddToShoppingCart"
                  asp-route-productId="@Model.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>