@model IEnumerable<Supplier>

<li class="dropdown">
    <a asp-controller="Product"
        asp-action="Index"
        class="dropdown-toggle" data-toggle="dropdown">Products<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach(var supplier in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="List"
                   asp-route-supplier="@supplier.SupplierName">@supplier.SupplierName</a>
            </li>
        }
        <li class="divider"></li>
        <li><
            <a asp-controller="Product" asp-action="List" asp-route-Supplier=""> Click to view all products</a>
        </li>
        </ul>
    </li>
}

